CREATE OR REPLACE TRIGGER UPDATEDSalary
AFTER INSERT OR UPDATE OF SALARY ON EMPLOYEE2
FOR EACH ROW
DECLARE
  JOBTYPE EMPLOYEE2.JOBTYPE%TYPE;
BEGIN
  CASE
    WHEN :NEW.JOBTYPE = 'Administrative Support' THEN
      UPDATE EMPLOYEE2 SET SALARY = SALARY + SALARY * 0.10;
    WHEN :NEW.JOBTYPE = 'ENGINEER' THEN
      UPDATE EMPLOYEE2 SET SALARY = SALARY + SALARY * 0.05;
    WHEN :NEW.JOBTYPE = 'TRAFFIC MONITOR' THEN
      UPDATE EMPLOYEE2 SET SALARY = SALARY + SALARY * 0.25;
    WHEN :NEW.JOBTYPE = 'AIRPORT AUTHORITY' THEN
      UPDATE EMPLOYEE2 SET SALARY = SALARY + SALARY * 0.45;
  END CASE;
END;
